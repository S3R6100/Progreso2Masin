<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Progreso2Masin.MainPage">
    <StackLayout Padding="20"
                 Spacing="25"
                 VerticalOptions="CenterAndExpand"
                 HorizontalOptions="CenterAndExpand">

        <Label Text="Bienvenido a la aplicación de Sergio Masin"
               FontAttributes="Bold"
               FontSize="Large"
               HorizontalOptions="Center" />
        
        <Button x:Name="IrAChistes"
                Text="Ir a Chiste"
                WidthRequest="200"
                HorizontalOptions="Center"
                Clicked="IrAChistes_Clicked" />
        <Button x:Name="IrAAbout"
                Text="Ir a About"
                WidthRequest="200"
                HorizontalOptions="Center"
                Clicked="IrAAbout_Clicked" />
    </StackLayout>
</ContentPage>
